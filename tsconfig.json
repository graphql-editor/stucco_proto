{
  "compileOnSave": false,
  "compilerOptions": {
	"strict":true,
	"baseUrl": ".",
	"sourceMap": true,
	"inlineSources": true,
	"declaration": true,
	"module": "commonjs",
	"resolveJsonModule": true,
	"stripInternal": true,
	"allowSyntheticDefaultImports": true,
	"moduleResolution": "node",
	"target": "es2017",
	"typeRoots": ["./node_modules/@types"],
	"types": ["node"],
	"skipLibCheck": true
  },
  "exclude": ["node_modules"]
}

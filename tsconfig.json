{
  "compileOnSave": false,
  "compilerOptions": {
	"outDir": "./dist/lib",
    "rootDir": "./ts",
    "strict":true,
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es3",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
